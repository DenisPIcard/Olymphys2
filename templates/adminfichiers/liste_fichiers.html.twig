{% extends "base.html.twig" %}
{% block title %} Fichiers  de l'équipe {{infoequipe}}{% endblock %}



{% block titre3 %}Liste des fichiers de l'équipe {{infoequipe}} {% endblock %}


{% block body %}
    <div class="well">
       
   
    <table>  
        {% for form in formtab %}
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
             <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
             </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.fichier, {  'class':'custom-file-input'}) }}
                </div>
                <div class="col" id="some-custom-id">
                    {% if loop.index<loop.length %}
                        {{ form_widget(form.save, { 'label': 'Télécharger' }) }}
                    {% else %}
                        {{ form_widget(form.save, { 'label': 'Tout télécharger' }) }}
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}         
            <hr> 
            
        {% endfor %} 
    </table>
    <div class="well" >
     <center><a href="{{ path('liste_equipes',{centre :centrecia.id })  }}" >Retour à la liste des équipes</a></center>
    </div>
       
   
 {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js" ></script> 
        {#<script src="./coverage/bs-custom-file-input.js"></script>#}
        <script>
            {# $(document).ready(function () {
                bsCustomFileInput.init()
            })#}
                bsCustomFileInput.init()
        </script>
    {% endblock %}  
   
        
     
{% endblock %}


