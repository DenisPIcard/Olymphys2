{% extends "base.html.twig" %}
{% block stylesheets %}
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" id="bootstrap-css">
   <link rel="stylesheet" href="{{asset('/css/imagesgalery.css')}}">
    
    
    {% endblock %}

{% block title %} {{edition.ed}}   Les photos des épreuves interacadémiques {% endblock %}



{% block titre3 %}{{edition.ed}} <sup>eme</sup> Les photos  des épreuves interacadémiques  du centre {{centre.centre}} {% endblock %}


{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
<ul class="navbar-nav">
    <li><a href="{{path('photos_gestion_photos',{infos:concours~'-'~edition.id~'-'~centre.id})}}" class="btn btn-primary" role="button" aria-pressed="true">Gestion des photos</a></li>
</ul>
    </nav>
    <div class="container-lg-12">
   
       <div class="row">
         {% for photo in liste_photos %}
                  
                     
                   <div class="container">      
                 
                       
                       {# <div class="row>"> #}
                           <a href="{{asset('/upload/images/'~edition.ed~'/int/'~photo.photo)}}">
                               <center><img src="{{asset('/upload/images/'~edition.ed~'/int/thumb/'~photo.photo)}}"></center></a>
                               <div class="text">
                                   {% if photo.coment=='' %}
                                       <font size = "-2">Eq {{photo.equipe.numero}} </font>   
                                       
                                    {% else %}   
                                       
                               <font size = "-2">{{photo.coment}}</font>
                               {% endif %}
                           </div>
                               
                      {# </div>  #}
                           
                    
                   
                 </div>  
                       
             {% endfor %}
         
    </div>
    
  
    </div>
  
   {% if concours=='cia' %}
    <center><a href="{{ path('photos_voirphotoscia',{edition : edition.id})  }}" >Retour à la liste des centres</a></center>
   {% endif %}
   
    {% if concours=='national' %}
    <center><a href="{{ path('photos_voirphotoscn',{edition : edition.id})  }}" >Retour à la liste des équipes</a></center>
   {% endif %}
   
   {% block javascripts %}
  
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  
  
        
        
        
        
    {% endblock %}  
   
   
   
   
   
   
{% endblock %}
