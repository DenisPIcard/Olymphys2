{% extends "base.html.twig" %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" id="bootstrap-css">
    <link rel="stylesheet" href="asset('css/imagecarousel.css')>
    
    
    {% endblock %}
{% block title %} {{edition}}   Les photos des épreuves nationales {% endblock %}



{% block titre3 %}{{edition}} <sup>eme</sup> Les photos  des épreuves nationales  {% endblock %}


{% block body %}

<div class="row justify-content-start-md-center">
    {% set m = 0 %}
       {% for equipe in liste_equipes %}
 
        {% set n= 0 %}
         {% for photo in liste_photos %}
             
             {%if photo.equipe.id == equipe.id %}
                 {% set n= n+1%}
             {%endif %}
          {% endfor %}       
      {%  if n >0 %}         
          <div class="col-lg-2   col-sm-3">
              {%  set titre = equipe.titreProjet[0:40] %}
              <a href="{{path('photos_galleryphotos',{infos: 'national-'~edition~'-'~equipe.id})}}"><h8> <button type="button" class="btn btn-primary"><font size="-2">{{equipe.lettre}}  {{ titre}}</font> </button> </h8> </a>
          
    <div id="carousel{{equipe.id}}" class="carousel slide" data-ride="carousel">
       
           <div class="carousel-inner">
              {% set i = 1 %} 
         {% for photo in liste_photos  if i<5 %}
             
             {% if photo.equipe.id == equipe.id %}
                 {% if i==1 %}
                     
                 <div class="carousel-item active" data-interval="5000">
                           <a href="{{path('photos_galleryphotos',{infos: 'national-'~edition~'-'~equipe.id})}}">        
                               <div class="parent">
                                   <center><div style="background:black">          <img src=" {{asset('/upload/images/'~edition~'/nat/thumb/'~photo.photo) }}"   alt="{{photo.equipe.TitreProjet }}"></div></center>
                               </div>
                           </a>
                            {# <center><div style="background:black;"> <font color="white" size="-2">photo {{i}}/{{n}}</font></div></center> #}
                 </div>
                    
                           {% endif %}
                            {% if i>1 %}
                   <div class="carousel-item" >
                       
                        <a href="{{path('photos_galleryphotos',{infos: 'national-'~edition~'-'~equipe.id})}}}">                
                           <div class="parent">
                               <center><div style="background:black;"><img src=" {{asset('/upload/images/'~edition~'/nat/thumb/'~photo.photo) }}"   alt="{{photo.equipe.TitreProjet}}"></div></center>
                           </div>
                            </a> 
                           {# <center><div style="background:black"> <font color="white" size="-2"> photo {{i}}/{{n}}</font></div></center> #}
                </div>  
                {% endif %}
                {% set i= i+1 %}
             {% endif %}
         {% endfor %}
       </div>
      
          <a class="carousel-control-prev" href="#carousel{{equipe.id}}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
          <a class="carousel-control-next" href="#carousel{{equipe.id}}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
    {% set m = m+1 %} 
    </div> 
     </div>        
            {% if m%4 == 0  %}
             <div class="w-100"></div>
                 
              {%endif %}
          
          {% endif %}          
    </a>
                 
            
{%endfor %}
</div>
     
 

       
   
 {% block javascripts %}
  
